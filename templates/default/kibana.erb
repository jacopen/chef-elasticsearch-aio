server {
  listen   <%= node[:es_with_fluentd][:nginx][:port] %>;
  index index.html index.htm;

  server_name localhost <%= node[:es_with_fluentd][:nginx][:server_name] %>;

  access_log  /var/log/nginx/kibana.access.log;

  location / {
    root   /var/www/nginx-default;
  }

  location /kibana/ {
    access_log  /var/log/nginx/kibana.access.log;
    alias /var/www/kibana-latest/;
  }

  location /eh/ {
    access_log  /var/log/nginx/eh.access.log;
    alias /var/www/eh/;
  }
}
